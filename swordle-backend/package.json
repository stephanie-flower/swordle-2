{
  "name": "swordle-backend",
  "version": "0.0.1",
  "description": "The server-side logic for Swordle",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"pnpm run watch-ts\" \"pnpm run watch-node\"",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephanie-flower/swordle-2.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stephanie-flower/swordle-2/issues"
  },
  "homepage": "https://github.com/stephanie-flower/swordle-2#readme",
  "devDependencies": {
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "concurrently": "^7.2.2",
    "express": "^4.18.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.18",
    "socket.io": "^4.5.1"
  }
}
